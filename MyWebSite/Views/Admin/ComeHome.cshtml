@model MyWebSite.Models.Classes.Home
    @{
        ViewBag.Title = "ComeHome";
        Layout = "~/Views/Shared/_AdminLayoud.cshtml";
    }

    <h2 class="mt-4">Ana Sayfa Güncelle</h2>
    <hr />
    @using (Html.BeginForm("HomeUpdate", "Admin", FormMethod.Post))
    {
        @Html.LabelFor(x => x.id)
        @Html.TextBoxFor(x => x.id, new { @class = "form-control", @readonly = "readonly" })
        <br />
        @Html.LabelFor(x => x.profil)
        @Html.TextBoxFor(x => x.profil, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.departmen)
        @Html.TextBoxFor(x => x.departmen, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.explanation)
        @Html.TextAreaFor(x => x.explanation, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.communication)
        @Html.TextBoxFor(x => x.communication, new { @class = "form-control" })
        <br />
        <button class="btn btn-success">Ana Sayfa Güncelle</button>

    }

