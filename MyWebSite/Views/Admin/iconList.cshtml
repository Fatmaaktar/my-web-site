@using MyWebSite.Models.Classes
@model List<Icon>
@{
    ViewBag.Title = "iconList";
    Layout = "~/Views/Shared/_AdminLayoud.cshtml";
}
<h2 class="mb-4">İkon Sayfası</h2>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>İkon</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td><i class="@x.icon"></i></td>
            <td><a href="/Admin/comeIcon/@x.id" class="btn btn-primary">Güncelle</a></td>
            <td><a href="/Admin/deleteIcon/@x.id" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/Admin/newIcon/" class="btn btn-primary">İkon Ekle</a>

